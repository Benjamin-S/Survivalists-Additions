<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<!-- If SeedsPlease is found, add seeds -->
	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="SurvivalistsAdditions.PatchOperationModDependent">
				<modName>SeedsPlease</modName>
			</li>
			<li Class="PatchOperationInsert">
				<xpath>/Defs/ThingDef[@Name="SRV_PlantDefInsertion"]</xpath>
				<order>Prepend</order>
				<value>
					<SeedsPlease.SeedDef Name="SRV_SeedBase" ParentName="ResourceBase" Abstract="True">
						<thingClass>SeedsPlease.Seed</thingClass>
						<label>unspecified seed</label>
						<description>These are genetically engineered seeds capable of thriving in a wide range of alien environments over multiple generations.</description>
						<graphicData>
							<texPath>Things/Item/Seeds/Seeds</texPath>
							<graphicClass>Graphic_StackCount</graphicClass>
						</graphicData>
						<statBases>
							<MaxHitPoints>15</MaxHitPoints>
							<Mass>0.015</Mass>
							<Flammability>1.0</Flammability>
							<DeteriorationRate>1</DeteriorationRate>
							<MarketValue>0</MarketValue>
							<SellPriceFactor>0.01</SellPriceFactor>
						</statBases>
						<soundInteract>Grain_Drop</soundInteract>
						<soundDrop>Grain_Drop</soundDrop>
						<thingCategories>
							<li>SeedsCategory</li>
						</thingCategories>
						<tradeTags>
							<li>Seeds</li>
						</tradeTags>
						<seed>
							<harvestFactor>1.0</harvestFactor>
							<seedFactor>1.0</seedFactor>
							<baseChance>0.95</baseChance>
							<extraChance>0.15</extraChance>
						</seed>
						<stackLimit>500</stackLimit>
					</SeedsPlease.SeedDef>

					<SeedsPlease.SeedDef ParentName="SRV_SeedBase">
						<defName>SRV_SeedTurnip</defName>
						<label>turnip seeds</label>
						<plant>SRV_PlantTurnip</plant>
					</SeedsPlease.SeedDef>
					
					<SeedsPlease.SeedDef ParentName="SRV_SeedBase">
						<defName>SRV_SeedCabbage</defName>
						<label>cabbage seeds</label>
						<plant>SRV_PlantCabbage</plant>
					</SeedsPlease.SeedDef>
				</value>
			</li>
		</operations>
	</Operation>

	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="SurvivalistsAdditions.PatchOperationModDependent">
				<modName>SeedsPlease</modName>
			</li>
			<li Class="PatchOperationInsert">
				<xpath>/Defs/RecipeDef[@Name="SRV_RecipeDefInsertion"]</xpath>
				<order>Prepend</order>
				<value>
					<RecipeDef ParentName="ProcessRaw">
						<defName>SRV_ProcessRawTurnip</defName>
						<label>process turnips into seeds</label>
						<description>Cut turnips into starters for growing more turnips.</description>
						<jobString>Processing plants.</jobString>
						<workSpeedStat>TailoringSpeed</workSpeedStat>
						<effectWorking>Tailor</effectWorking>
						<soundWorking>Recipe_Tailor</soundWorking>
						<workSkill>Crafting</workSkill>
						<workAmount>800</workAmount>
						<recipeUsers>
							<li>PlantProcessingTable</li>
						</recipeUsers>
						<ingredients>
							<li>
								<filter>
									<thingDefs>
										<li>SRV_Turnip</li>
									</thingDefs>
								</filter>
								<count>2</count>
							</li>
						</ingredients>
						<fixedIngredientFilter>
							<thingDefs>
								<li>SRV_Turnip</li>
							</thingDefs>
						</fixedIngredientFilter>
						<products>
							<SRV_SeedTurnip>2</SRV_SeedTurnip>
						</products>
					</RecipeDef>
					
					<RecipeDef>
						<defName>SRV_ExtractSeedCabbage</defName>
						<label>extract cabbage seeds</label>
						<description>Extract seeds from cabbage.</description>
						<jobString>Extracting seeds.</jobString>
						<workSpeedStat>CookSpeed</workSpeedStat>
						<effectWorking>Cook</effectWorking>
						<workSkill>Cooking</workSkill>
						<workAmount>600</workAmount>
						<recipeUsers>
							<li>PlantProcessingTable</li>
						</recipeUsers>
						<ingredients>
							<li>
								<filter>
									<thingDefs>
										<li>SRV_Cabbage</li>
									</thingDefs>
								</filter>
								<count>10</count>
							</li>
						</ingredients>
						<fixedIngredientFilter>
							<thingDefs>
								<li>SRV_Cabbage</li>
							</thingDefs>
						</fixedIngredientFilter>
						<products>
							<SRV_SeedCabbage>5</SRV_SeedCabbage>
						</products>
					</RecipeDef>
				</value>
			</li>
		</operations>
	</Operation>

</Patch>