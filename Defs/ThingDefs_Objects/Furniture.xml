			<texPath>Cupro/Object/Furniture/Bed/HideBed</texPath>
			<drawSize>(3,4)</drawSize>
			<damageData>
				<rect>(0,0.05,1,1.95)</rect>
			</damageData>
		</graphicData>
		<Size>(1,2)</Size>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Beauty>4</Beauty>
			<WorkToBuild>800</WorkToBuild>
			<Mass>20</Mass>
		</statBases>
		<costStuffCount>20</costStuffCount>
		<costList>
			<WoodLog>15</WoodLog>
		</costList>
	</ThingDef>

