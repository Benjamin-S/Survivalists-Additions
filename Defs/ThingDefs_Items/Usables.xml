			<texPath>Cupro/Item/Usable/Turnip</texPath>
		</graphicData>
		<statBases>
			<MarketValue>1.2</MarketValue>
			<SellPriceFactor>0.5</SellPriceFactor>
		</statBases>
		<comps>
			<li Class="CompProperties_Rottable">
				<daysToRotStart>30</daysToRotStart>
			</li>
		</comps>
